=define_helper_functions

%section#kmeans_chart_form.panel.radius.plot
  %h3.subheader K-means clustering by #{Array(params[:array_text]).to_sentence}
  .row
  %span.button.hide{id: "kmeans_hide_#{params['chart_id']}"} Hide chart
  %br
    .chart

      :javascript
        $(function() {
          $("#kmeans_hide_#{params['chart_id']}").on('click', function() {
            $("#kmeans_chart_#{params["chart_id"]}").remove();
          });
        });