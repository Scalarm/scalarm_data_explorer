      if ($("#kmeansModal input:checkbox").length ==  $("#kmeansModal input:checked").length) {
        $("#kmeansModal input:checkbox").prop('checked', false);
      }
      else $("#kmeansModal input:checkbox").prop('checked', true);
    }); */


